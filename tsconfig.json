{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@yui/*": [
        "./packages/*"
      ]
    }
  },
  "include": [
    "examples",
    "packages",
    "components.d.ts",
    "auto-imports.d.ts"
  ],
}
